@using Microsoft.Extensions.Localization
@using RewardsAndRecognitionSystem.Localization
@inject IStringLocalizer<SharedResource> localizer

@model IEnumerable<RewardsAndRecognitionSystem.ViewModels.YearQuarterViewModel>

@{
    string selectedFilter = ViewBag.SelectedFilter as string ?? "active";
}

<table class="yearquarter-table">
    <thead>
        <tr>
            <th><i class="bi bi-calendar2"></i> @localizer["Year"]</th>
            <th><i class="bi bi-calendar3"></i> @localizer["Quarter"]</th>
            <th><i class="bi bi-calendar-event"></i> @localizer["Start_Date"]</th>
            <th><i class="bi bi-calendar-check"></i> @localizer["End_Date"]</th>
            <th><i class="bi bi-check2-circle"></i> @localizer["Active"]</th>
            <th><i class="bi bi-gear-fill"></i> @localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">
                    <div class="alert alert-warning m-0" role="alert">
                        <i class="bi bi-info-circle"></i>
                        @(selectedFilter == "deleted" ? localizer["No_deleted_year_quarters_found"] : localizer["No_active_year_quarters_found"])
                    </div>
                </td>
            </tr>
        }
        else
        {
            foreach (var yq in Model)
            {
                <tr class="@(yq.IsActive ? "" : "table-danger")">
                    <td>@yq.Year</td>
                    <td>@yq.Quarter</td>
                    <td>@(yq.StartDate?.ToShortDateString() ?? localizer["N/A"])</td>
                    <td>@(yq.EndDate?.ToShortDateString() ?? localizer["N/A"])</td>
                    <td>
                        @if (yq.IsActive)
                        {
                            <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> @localizer["Active"]</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary"><i class="bi bi-x-circle-fill"></i> @localizer["Inactive"]</span>
                        }
                    </td>
                    <td>
                        @if (!yq.IsDeleted)
                        {
                            <a asp-action="Details" asp-route-id="@yq.Id" class="btn btn-secondary">
                                <i class="bi bi-eye-fill"></i> @localizer["View"]
                            </a>
                            <a asp-action="Edit" asp-route-id="@yq.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> @localizer["Edit"]
                            </a>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete('@yq.Id')">
                                <i class="bi bi-trash-fill"></i> @localizer["Delete"]
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>
                                <i class="bi bi-eye-fill"></i> @localizer["View"]
                            </button>
                            <button class="btn btn-primary" disabled>
                                <i class="bi bi-pencil-square"></i> @localizer["Edit"]
                            </button>
                            <button class="btn btn-danger" disabled>
                                <i class="bi bi-trash-fill"></i> @localizer["Deleted"]
                            </button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.Any())
{
    <div class="d-flex justify-content-between align-items-center mt-4" style="min-height: 75px;">
        <span>@localizer["Showing_page"] @ViewBag.CurrentPage @localizer["of"] @ViewBag.TotalPages</span>
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       asp-route-filter="@ViewBag.SelectedFilter">
                        @localizer["Previous"]
                    </a>
                </li>

                <li class="page-item active">
                    <span class="page-link">@ViewBag.CurrentPage</span>
                </li>

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage + 1)"
                       asp-route-filter="@ViewBag.SelectedFilter">
                        @localizer["Next"]
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
