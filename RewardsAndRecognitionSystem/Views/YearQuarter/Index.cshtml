@using Microsoft.Extensions.Localization
@using RewardsAndRecognitionSystem.Localization

@inject IStringLocalizer<SharedResource> localizer
@model IEnumerable<RewardsAndRecognitionSystem.ViewModels.YearQuarterViewModel>

@{
    ViewData["Title"] = localizer["Year_Quarters"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta charset="utf-8">

<style>
    :root {
        --indigo-main: #3f51b5;
        --indigo-light: #5c6bc0;
        --indigo-dark: #303f9f;
        --danger: #c62828;
        --danger-hover: #b71c1c;
        --text-light: #fff;
        --info: #0288d1;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 30px 0 20px;
    }

    .add-btn {
        background: linear-gradient(to right, var(--indigo-main), var(--indigo-light));
        color: var(--text-light);
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 500;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .add-btn:hover {
            background: var(--indigo-dark);
            color: var(--text-light);
        }

    .yearquarter-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

        .yearquarter-table th, .yearquarter-table td {
            padding: 14px 16px;
            text-align: left;
        }

        .yearquarter-table th {
            background: linear-gradient(to right, var(--indigo-main), var(--indigo-light));
            color: white;
            font-weight: 600;
        }

        .yearquarter-table tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .yearquarter-table tr:hover {
            background-color: #eef1f7;
        }

    .btn {
        padding: 8px 12px;
        border: none;
        border-radius: 5px;
        font-size: 0.85rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-secondary {
        background: #6c757d;
    }

        .btn-secondary:hover {
            background: #5a6268;
        }

    .btn-primary {
        background-color: var(--indigo-main);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--indigo-dark);
        }

    .btn-danger {
        background-color: var(--danger);
        color: white;
    }

        .btn-danger:hover {
            background-color: var(--danger-hover);
        }
</style>

<div class="page-header d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <!-- Left Side: Heading -->
    <div>
        <h2><i class="bi bi-calendar2-week-fill me-2"></i> @localizer["Year_Quarters"]</h2>
    </div>
    <!-- Right Side: Toggle + Add Button -->
    <div class="d-flex align-items-center gap-3">
        <div class="form-check form-switch m-0">
            <input class="form-check-input" type="checkbox" role="switch" id="toggleFilter"
                   @(ViewBag.SelectedFilter == "deleted" ? "checked" : "")>
            <label class="form-check-label ms-2" for="toggleFilter">
                @localizer["Show Deleted"]
            </label>
        </div>

        <a asp-action="Create" class="btn btn-primary d-inline-flex align-items-center gap-2">
            <i class="bi bi-plus-circle-fill"></i> @localizer["Add_Year_Quarter"]
        </a>
    </div>
</div>

<div id="yearQuarterContainer">
    @Html.Partial("_YearQuarterListPartial", Model)
</div>

<script>
    function confirmDelete(userId) {
        const activeBtn = document.activeElement;
        if (activeBtn) {
            activeBtn.blur();
        }

        Swal.fire({
            title: '@localizer["Are_You_Sure"]',
              text:  '@Html.Raw(localizer["Action_Cannot_Be_Undone"])',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: '@localizer["Yes_Delete_It"]',
            cancelButtonText: '@localizer["No_Cancel"]',
            reverseButtons: true,
            allowOutsideClick: true,
            focusConfirm: false,
            focusCancel: false,
            didOpen: () => {
                setTimeout(() => document.activeElement?.blur(), 10);
            },
            didClose: () => {
                setTimeout(() => document.activeElement?.blur(), 10);
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/YearQuarter/DeleteConfirmed/' + userId;

                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    const hiddenToken = document.createElement('input');
                    hiddenToken.type = 'hidden';
                    hiddenToken.name = '__RequestVerificationToken';
                    hiddenToken.value = token.value;
                    form.appendChild(hiddenToken);
                }

                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).on("click", ".pagination-link", function (e) {
        e.preventDefault();
        var url = $(this).attr("href");

        $.ajax({
            url: url,
            type: "GET",
            headers: { "X-Requested-With": "XMLHttpRequest" },
            success: function (result) {
                $('#yearQuarterContainer').html(result);
            },
            error: function () {
                alert('@localizer["Failed_To_Load_Year_Quarters"]');
            }
        });
    });

    document.getElementById("toggleFilter").addEventListener("change", function () {
        const filter = this.checked ? "deleted" : "active";

        $.ajax({
            url: "/YearQuarter/Index?filter=" + filter,
            type: "GET",
            headers: { "X-Requested-With": "XMLHttpRequest" },
            success: function (result) {
                $('#yearQuarterContainer').html(result);
            },
            error: function () {
                alert('@localizer["Failed_To_Load_Year_Quarters"]');
            }
        });
    });
</script>

<style>
    .form-switch .form-check-input:checked {
        background-color: var(--danger);
        border-color: var(--danger-hover);
    }
</style>
