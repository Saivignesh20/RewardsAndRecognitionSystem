
@using Microsoft.Extensions.Localization
@using RewardsAndRecognitionSystem.Localization
@inject IStringLocalizer<SharedResource> localizer
@inject IStringLocalizer<RewardsAndRecognitionSystem.Localization.SharedResource> localizer
@model IEnumerable<RewardsAndRecognitionSystem.ViewModels.CategoryViewModel>

@{
    var usedCategoryIds = ViewBag.UsedCategoryIds as List<Guid> ?? new List<Guid>();
    bool showDeleted = ViewBag.ShowDeleted ?? false;
}

<table class="table-custom">
    <thead>
        <tr>
            <th><i class="bi bi-tag-fill"></i> @localizer["Name"]</th>
            <th class="desc-cell"><i class="bi bi-card-text"></i> @localizer["Description"]</th>
            <th><i class="bi bi-calendar-event"></i> @localizer["Created Date"]</th>
            <th><i class="bi bi-check-circle-fill"></i> @localizer["Status"]</th>
            <th><i class="bi bi-tools"></i> @localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">
                    <div class="alert alert-warning m-0" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        @(showDeleted
                                            ? @localizer["No deleted categories found."]
                                            : @localizer["No active categories found."])
                </div>
            </td>
        </tr>
                }
        else
        {
            foreach (var category in Model)
            {
                <tr class="@(category.IsDeleted ? "table-danger" : "")">
                    <td>@category.Name</td>
                    <td class="desc-cell">@category.Description</td>
                    <td>@category.CreatedAt.ToShortDateString()</td>
                    <td>
                        @if (category.IsDeleted)
                        {
                            <span class="badge bg-danger"><i class="bi bi-x-circle-fill"></i> @localizer["Deleted"]</span>
                        }
                        else if (category.isActive)
                        {
                            <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> @localizer["Active"]</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary"><i class="bi bi-x-circle-fill"></i> @localizer["Inactive"]</span>
                        }
                    </td>
                    <td class="actions-cell">
                        @if (category.IsDeleted)
                        {
                            <button type="button" class="btn btn-secondary btn-sm" disabled>
                                <i class="bi bi-pencil-fill"></i> @localizer["Edit"]
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" disabled>
                                <i class="bi bi-trash-fill"></i> @localizer["Deleted"]
                            </button>
                        }
                        else
                        {
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-indigo btn-sm">
                                <i class="bi bi-pencil-fill"></i> @localizer["Edit"]
                            </a>
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-secondary btn-sm">
                                <i class="bi bi-eye-fill"></i> @localizer["Details"]
                            </a>

                            @if (usedCategoryIds.Contains(category.Id))
                            {
                                <button type="button" class="btn btn-danger btn-sm" disabled title="@localizer["Cannot delete - used in nomination"]">
                                    <i class="bi bi-trash-fill"></i> @localizer["Delete"]
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@category.Id')">
                                    <i class="bi bi-trash-fill"></i> @localizer["Delete"]
                                </button>
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
