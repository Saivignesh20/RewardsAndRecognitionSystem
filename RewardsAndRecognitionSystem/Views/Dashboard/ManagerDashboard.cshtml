            if (!teamId) return;

            fetch(`/Dashboard/GetTeamNominations?teamId=${teamId}`)
                .then(response => {
                    if (!response.ok) throw new Error("Failed to fetch nominations");
                    return response.text();
                })
                .then(html => {
                    document.getElementById("teamModalContent").innerHTML = html;
