                                anchor: 'center',
                                align: 'center',
                                font: {
                                    weight: 'bold',
                                    size: 14
                                },
                                formatter: function (value) {
                                    return value > 0 ? value : ''; // Hide label if value is 0
                                }
                            },
                            tooltip: { enabled: true },
                            title: { display: false }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: { precision: 0 }
                            }
                        }
