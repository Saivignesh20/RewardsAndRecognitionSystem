@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    .hero-section {
        text-align: center;
        padding: 100px 20px 60px;
        background: linear-gradient(to right, #6a11cb, #2575fc);
        color: white;
        border-radius: 20px;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        max-width: 650px;
        margin: 0 auto;
        color: #e0e0e0;
    }

    .features {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 60px 20px 40px;
        background: linear-gradient(to bottom, #f9f9f9, #f0f4ff);
    }

    .feature-box {
        width: 300px;
        padding: 30px 25px;
        border-radius: 15px;
        background: white;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .feature-box:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.12);
        }

    .feature-icon {
        font-size: 2.8rem;
        margin-bottom: 12px;
    }

    .feature-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
    }

    .feature-desc {
        font-size: 0.95rem;
        color: #555;
    }

</style>
<div class="hero-section">
    <h1 class="hero-title">@Localizer["Welcome"]</h1>
    <p class="hero-subtitle">
        @Localizer["Come_let_us_celebrate_a_moment_where_Talent_meets_Spotlight!"]
    </p>
</div>



<div class="features">
    <div class="feature-box" style="border-top: 5px solid #6f42c1;">
        <div class="feature-icon">🌟</div>
        <div class="feature-title">@Localizer["Nominate_Talents"]</div>
        <div class="feature-desc">
            @Localizer["TeamLeads"]
        </div>
    </div>

    <div class="feature-box" style="border-top: 5px solid #20c997;">
        <div class="feature-icon">✅</div>
        <div class="feature-title">@Localizer["Multi-Level_Approvals"]</div>
        <div class="feature-desc">
            @Localizer["Transparent"]
        </div>
    </div>

    <div class="feature-box" style="border-top: 5px solid #fd7e14;">
        <div class="feature-icon">📈</div>
        <div class="feature-title"> @Localizer["Recognition_Dashboard"]</div>
        <div class="feature-desc">
            @Localizer["Approved"]
        </div>
    </div>

    <div class="feature-box" style="border-top: 5px solid #dc3545;">
        <div class="feature-icon">🏆</div>
        <div class="feature-title">@Localizer["Award_Categories"]</div>
        <div class="feature-desc">
            @Localizer["Celebrate"]
        </div>
    </div>

    <div class="feature-box" style="border-top: 5px solid #17a2b8;">
        <div class="feature-icon">📅</div>
        <div class="feature-title"> @Localizer["Quarter-Based_System"]</div>
        <div class="feature-desc">
            @Localizer["Track"]
        </div>
    </div>

    <div class="feature-box" style="border-top: 5px solid #ffc107;">
        <div class="feature-icon">🔔</div>
        <div class="feature-title">  @Localizer["Live_Notifications"]</div>
        <div class="feature-desc">
            @Localizer["Get"]
        </div>
    </div>
</div>
