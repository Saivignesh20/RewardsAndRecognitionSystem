@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <partial name="_StatusMessage" for="StatusMessage" />
    <partial name="_ManageNav" />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <h4 class="text-center text-primary mb-4">👤 User Information</h4>

                    <dl class="row fs-6">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.user.Name</dd>


                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.user.Email</dd>

                        <dt class="col-sm-4">Team</dt>
                        <dd class="col-sm-8">@(Model.user.Team?.Name ?? "Not in a Team")</dd>

                        <dt class="col-sm-4">Manager</dt>
                        <dd class="col-sm-8">@(Model.user.Team?.Manager.Name ?? "No Manager")</dd>

                        <dt class="col-sm-4">Director</dt>
                        <dd class="col-sm-8">@(Model.user.Team?.Director.Name ?? "No Director")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.user.IsActive == true ? "success" : "secondary")">
                                @(Model.user.IsActive == true ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Joined</dt>
                        <dd class="col-sm-8">@Model.user.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
